{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://raw.githubusercontent.com/ptr727/PlexCleaner/main/PlexCleaner.schema.json",
  "title": "PlexCleaner Configuration Schema",
  "definitions": {
    "ConvertOptions": {
      "type": "object",
      "properties": {
        "FfMpegOptions": {
          "$ref": "#/definitions/FfMpegOptions"
        },
        "HandBrakeOptions": {
          "$ref": "#/definitions/HandBrakeOptions"
        }
      },
      "required": [
        "FfMpegOptions",
        "HandBrakeOptions"
      ]
    },
    "FfMpegOptions": {
      "type": "object",
      "properties": {
        "Video": {
          "type": "string"
        },
        "Audio": {
          "type": "string"
        },
        "Global": {
          "type": "string"
        },
        "Output": {
          "type": "string"
        }
      },
      "required": [
        "Video",
        "Audio",
        "Global",
        "Output"
      ]
    },
    "HandBrakeOptions": {
      "type": "object",
      "properties": {
        "Video": {
          "type": "string"
        },
        "Audio": {
          "type": "string"
        }
      },
      "required": [
        "Video",
        "Audio"
      ]
    },
    "MonitorOptions": {
      "type": "object",
      "properties": {
        "MonitorWaitTime": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        },
        "FileRetryWaitTime": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        },
        "FileRetryCount": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        }
      },
      "required": [
        "MonitorWaitTime",
        "FileRetryWaitTime",
        "FileRetryCount"
      ]
    },
    "ProcessOptions": {
      "type": "object",
      "properties": {
        "KeepOriginalLanguage": {
          "type": "boolean"
        },
        "KeepExtensions": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "ReMuxExtensions": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "ReEncodeVideo": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/VideoFormat"
          }
        },
        "ReEncodeAudioFormats": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "KeepLanguages": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "PreferredAudioFormats": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "FileIgnoreList": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "DeleteEmptyFolders": {
          "type": "boolean"
        },
        "DeleteUnwantedExtensions": {
          "type": "boolean"
        },
        "ReMux": {
          "type": "boolean"
        },
        "DeInterlace": {
          "type": "boolean"
        },
        "ReEncode": {
          "type": "boolean"
        },
        "SetUnknownLanguage": {
          "type": "boolean"
        },
        "DefaultLanguage": {
          "type": "string"
        },
        "RemoveUnwantedLanguageTracks": {
          "type": "boolean"
        },
        "RemoveDuplicateTracks": {
          "type": "boolean"
        },
        "RemoveTags": {
          "type": "boolean"
        },
        "UseSidecarFiles": {
          "type": "boolean"
        },
        "SidecarUpdateOnToolChange": {
          "type": "boolean"
        },
        "Verify": {
          "type": "boolean"
        },
        "RestoreFileTimestamp": {
          "type": "boolean"
        }
      },
      "required": [
        "KeepOriginalLanguage",
        "KeepExtensions",
        "ReMuxExtensions",
        "ReEncodeVideo",
        "ReEncodeAudioFormats",
        "KeepLanguages",
        "PreferredAudioFormats",
        "FileIgnoreList",
        "DeleteEmptyFolders",
        "DeleteUnwantedExtensions",
        "ReMux",
        "DeInterlace",
        "ReEncode",
        "SetUnknownLanguage",
        "DefaultLanguage",
        "RemoveUnwantedLanguageTracks",
        "RemoveDuplicateTracks",
        "RemoveTags",
        "UseSidecarFiles",
        "SidecarUpdateOnToolChange",
        "Verify",
        "RestoreFileTimestamp"
      ]
    },
    "ToolsOptions": {
      "type": "object",
      "properties": {
        "UseSystem": {
          "type": "boolean"
        },
        "RootPath": {
          "type": "string"
        },
        "RootRelative": {
          "type": "boolean"
        },
        "AutoUpdate": {
          "type": "boolean"
        }
      },
      "required": [
        "UseSystem",
        "RootPath",
        "RootRelative",
        "AutoUpdate"
      ]
    },
    "VerifyOptions": {
      "type": "object",
      "properties": {
        "AutoRepair": {
          "type": "boolean"
        },
        "DeleteInvalidFiles": {
          "type": "boolean"
        },
        "RegisterInvalidFiles": {
          "type": "boolean"
        },
        "MinimumDuration": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        },
        "VerifyDuration": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        },
        "IdetDuration": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        },
        "MaximumBitrate": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        },
        "MinimumFileAge": {
          "type": "integer",
          "minimum": 0.0,
          "maximum": 2147483647.0
        }
      },
      "required": [
        "AutoRepair",
        "DeleteInvalidFiles",
        "RegisterInvalidFiles",
        "MinimumDuration",
        "VerifyDuration",
        "IdetDuration",
        "MaximumBitrate",
        "MinimumFileAge"
      ]
    },
    "VideoFormat": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "Format": {
          "type": [
            "string",
            "null"
          ]
        },
        "Codec": {
          "type": [
            "string",
            "null"
          ]
        },
        "Profile": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "$schema": {
      "type": [
        "string",
        "null"
      ]
    },
    "SchemaVersion": {
      "type": "integer",
      "default": 0
    },
    "ToolsOptions": {
      "$ref": "#/definitions/ToolsOptions"
    },
    "ProcessOptions": {
      "$ref": "#/definitions/ProcessOptions"
    },
    "ConvertOptions": {
      "$ref": "#/definitions/ConvertOptions"
    },
    "VerifyOptions": {
      "$ref": "#/definitions/VerifyOptions"
    },
    "MonitorOptions": {
      "$ref": "#/definitions/MonitorOptions"
    }
  },
  "required": [
    "ToolsOptions",
    "ProcessOptions",
    "ConvertOptions",
    "VerifyOptions",
    "MonitorOptions"
  ]
}